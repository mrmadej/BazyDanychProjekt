@model BazyDanychProjekt.Models.Hotel

<h2>Potwierdź usunięcie hotelu</h2>

<p>Czy na pewno chcesz usunąć hotel o nazwie: <strong>@Model.Nazwa</strong>?</p>

<form asp-action="PotwierdzUsuniecieHoteluPotwierdzenie" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>