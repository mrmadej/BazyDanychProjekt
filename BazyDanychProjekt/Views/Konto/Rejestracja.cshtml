@model BazyDanychProjekt.Models.RejestracjaViewModel

<h2>Rejestracja</h2>

<form asp-action="Rejestracja" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Haslo"></label>
        <input asp-for="Haslo" type="password" class="form-control" />
        @*<span asp-validation-for="Haslo" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="PotwierdzHaslo"></label>
        <input asp-for="PotwierdzHaslo" type="password" class="form-control" />
        @*<span asp-validation-for="PotwierdzHaslo" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="Imie"></label>
        <input asp-for="Imie" class="form-control" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nazwisko"></label>
        <input asp-for="Nazwisko" class="form-control" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>
    <a asp-action="Logowanie">Zaloguj sie</a>

    <button type="submit" class="btn btn-primary">Zarejestruj</button>
</form>